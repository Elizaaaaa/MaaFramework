{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Run as Admin with PowerShell",
            "type": "cppdbg",
            "request": "launch",
            "program": "powershell.exe",
            "args": [
                "-ExecutionPolicy",
                "Bypass",
                "-File",
                "${workspaceFolder}/run_as_admin.ps1"
            ],
            "cwd": "${workspaceFolder}",
            "externalConsole": true,
            "MIMode": "gdb",
            "setupCommands": [
                {
                    "description": "Enable pretty-printing for gdb",
                    "text": "-enable-pretty-printing",
                    "ignoreFailures": true
                }
            ]
        },
        {
            "name": "Python Debugger: Current File",
            "type": "debugpy",
            "request": "launch",
            "program": "${file}",
            "console": "integratedTerminal",
            "justMyCode": false
        },
        {
            "type": "lldb",
            "request": "launch",
            "name": "MaaPiCli - Debug",
            "program": "${workspaceFolder}/build/bin/Debug/MaaPiCli",
            "args": [],
            "cwd": "${workspaceFolder}",
            "preLaunchTask": "build_picli"
        }
    ]
}